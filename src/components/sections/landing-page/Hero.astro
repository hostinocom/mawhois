---
// Hero section with search functionality
import DomainSearchForm from '../../ui/DomainSearchForm.astro';
import { registries } from '../../../config/registries.ts';

---

<section class="bg-(--color-secondary) px-3 py-16 md:py-20 lg:py-24 md:px-10 lg:px-20">
	<div class="max-w-7xl mx-auto">
		<!-- Breadcrumb -->
		<h1 class="text-white/70 text-xs mb-8">Whois Maroc</h1>
		
		<!-- Main Heading -->
		<h2 class="text-white text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-light mb-12 leading-none">
			Recherche d'un<br />
			domaine dans <em class="italic font-serif">le<br />registre WHOIS Maroc</em>
		</h2>

	<!-- Search Form - Pure Astro Component (No JavaScript hydration needed) -->
	<DomainSearchForm registries={registries} />
	</div>
</section>

<style>
	/* Responsive text sizing */
	@media (max-width: 640px) {
		h1 {
			font-size: 2rem;
		}
	}
</style>


