---
// Hero section with search functionality
import DomainSearchForm from '../../shared/DomainSearchForm.astro';
import { registries } from '../../../config/registries.ts';
import HeroSection from '../../ui/HeroSection.astro';

const { title } = Astro.props;

---

<HeroSection center={true}>
		<!-- Breadcrumb -->
		<h1 class="text-white/70 text-base md:text-xl mb-4 md:mb-8">Whois Maroc</h1>
		
		<!-- Main Heading -->
		<h2 set:html={title} class="text-white text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-light mb-8 md:mb-12 leading-none">
		</h2>

	<!-- Search Form - Pure Astro Component (No JavaScript hydration needed) -->
	<div class="flex justify-center">
		<DomainSearchForm registries={registries} />
	</div>
</HeroSection>

