---
// Hero section with search functionality
import DomainSearchForm from '../../shared/DomainSearchForm.astro';
import HeroSection from '../../ui/HeroSection.astro';

const { title, registries, baseRoute, searchButtonText } = Astro.props;

---

<HeroSection center={true}>
		<!-- Breadcrumb -->
		<div class="inline-flex items-center gap-[10px] bg-white/8 backdrop-blur-[20px] px-8 py-3.5 rounded-full border border-white/15 shadow-[0_8px_32px_rgba(0,0,0,0.1),inset_0_1px_0_rgba(255,255,255,0.1)] mb-8">
			<div class="w-4 h-4 rounded-full bg-[#00e676] shadow-[0_0_0_4px_rgba(0,230,118,0.2),0_4px_12px_rgba(0,230,118,0.4)] animate-pulse"></div>
			<span class="text-base font-light text-white tracking-wide drop-shadow-[0_2px_8px_rgba(0,0,0,0.2)]">
				Whois MA
			</span>
		</div>
		
		<style>
			@keyframes pulse {
				0%, 100% {
					box-shadow: 0 0 0 4px rgba(0, 230, 118, 0.2), 0 4px 12px rgba(0, 230, 118, 0.4);
				}
				50% {
					box-shadow: 0 0 0 8px rgba(0, 230, 118, 0.1), 0 4px 16px rgba(0, 230, 118, 0.5);
				}
			}
		</style>		
		<!-- Main Heading -->
		<h2 set:html={title} class="text-white text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-light mb-10 md:mb-12 leading-none">
		</h2>

	<!-- Search Form - Pure Astro Component (No JavaScript hydration needed) -->
	<div class="flex justify-center">
		<DomainSearchForm registries={registries} baseRoute={baseRoute} searchButtonText={searchButtonText} />
	</div>
</HeroSection>
