---
// Hero section for Nom de domaine Maroc page
import DomainSearchForm from '../../shared/DomainSearchForm.astro';
import HeroSection from '../../ui/HeroSection.astro';

interface Props {
	subtitle: string;
	title: string;
	price: string;
	registries :any
}

const {
	subtitle ,
	title,
	price,
	registries
} = Astro.props;
---

<HeroSection center={true}>
		<!-- Top text -->
		<h1 class="text-white/70 text-base md:text-xl mb-4 md:mb-8">
			{subtitle}
		</h1>
		
		<!-- Main Heading -->
		<h2 set:html={title} class="text-white text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-light mb-4 leading-none">
		</h2>
		
		<!-- Price -->
		<p class="text-(--color-primary) text-2xl md:text-3xl lg:text-4xl italic font-serif mb-12">
			{price}
		</p>

		<!-- Search Form -->
		<div class="flex justify-center">
			<DomainSearchForm registries={registries} />
		</div>
</HeroSection>


