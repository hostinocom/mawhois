---
// Pricing section for .MA domain names
import Section from '../../ui/Section.astro';
import Title from '../../ui/Title.astro';

interface Props {
	title?: string;
	intro?: string;
	features?: {
		characters?: string;
		noPremium?: string;
		noIdn?: string;
		noIdnSubtext?: string;
		noWhoisPrivacy?: string;
		restricted?: string;
		noDnssec?: string;
	};
	pricing?: {
		registration?: { label: string; price: string };
		renewal?: { label: string; price: string };
		transfer?: { label: string; price: string };
		restoration?: { label: string; price: string };
		ownerChange?: { label: string; price: string };
	};
	details?: {
		registrationDuration?: { label: string; value: string };
		renewalDuration?: { label: string; value: string };
		registrationDelay?: { label: string; value: string };
		transferDelay?: { label: string; value: string };
	};
}

const {
	title = "Prix nom de domaine Maroc",
	intro = "Pour l'enregistrement d'un nom de domaine en .ma, le tarif est fixé à 118 MAD HT par an pour une durée allant de 1 à 5 ans. Le renouvellement est quant à lui proposé à 150 MAD HT par an, également pour une durée de 1 à 5 ans. Si vous souhaitez transférer un domaine, le coût est de 150 MAD HT avec un délai de 1 à 5 jours, tandis qu'un changement de titulaire vous coûtera 118 MAD HT.",
	features = {
		characters: "CARACTÈRES",
		noPremium: "PAS DE<br/>PREMIUM",
		noIdn: "Pas d'IDN",
		noIdnSubtext: "CARACTÈRES<br/>ASCII<br/>UNIQUEMENT",
		noWhoisPrivacy: "PAS DE<br/>CONFIDENTIALITÉ<br/>WHOIS",
		restricted: "RESTREINTE",
		noDnssec: "PAS DE<br/>DNSSEC"
	},
	pricing = {
		registration: { label: "Enregistrement", price: "118 MAD HT / an" },
		renewal: { label: "Renouvellement", price: "150 MAD HT / an" },
		transfer: { label: "Transfert", price: "150 MAD HT" },
		restoration: { label: "Restauration", price: "Non disponible" },
		ownerChange: { label: "Changement de titulaire", price: "118 MAD HT" }
	},
	details = {
		registrationDuration: { label: "Durée d'enregistrement", value: "1 à 5 ans" },
		renewalDuration: { label: "Durée de renouvellement", value: "1 à 5 ans" },
		registrationDelay: { label: "Délai d'enregistrement", value: "Activation instantanée" },
		transferDelay: { label: "Délai de transfert", value: "1 à 5 jours" }
	}
} = Astro.props;
---

<Section backgroundColor="bg-white">
		<!-- Main title -->
		<Title>
			{title}
		</Title>
		
		<!-- Introductory text -->
		<div class="mb-12 md:mb-16">
			<p class="text-(--color-secondary) text-base md:text-xl leading-relaxed">
				{intro}
			</p>
		</div>

		<div class="grid grid-cols-1 lg:grid-cols-[35%_65%] gap-8 lg:gap-12 items-stretch">
			<!-- Left section: Feature boxes (3x2 grid) -->
			<div class="grid grid-cols-3 gap-3 md:gap-4 h-full">
				<!-- Box 1: Characters -->
				<div class="bg-white rounded-xl border border-gray-200 flex flex-col items-center justify-center text-center p-2 md:p-3 hover:shadow-md transition-shadow">
					<div class="text-xl md:text-2xl lg:text-3xl font-bold text-(--color-secondary) mb-1">2-63</div>
					<div class="text-[9px] md:text-[10px] lg:text-xs font-bold text-gray-500 uppercase tracking-wider" set:html={features.characters}></div>
				</div>
				
				<!-- Box 2: No Premium -->
				<div class="bg-white rounded-xl border border-gray-200 flex flex-col items-center justify-center text-center p-2 md:p-3 hover:shadow-md transition-shadow">
					<div class="text-gray-300 mb-2">
						<svg class="w-6 h-6 md:w-8 md:h-8" viewBox="0 0 24 24" fill="currentColor"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
					</div>
					<div class="text-[9px] md:text-[10px] lg:text-xs font-bold text-gray-300 uppercase tracking-wider" set:html={features.noPremium}></div>
				</div>
				
				<!-- Box 3: No IDN -->
				<div class="bg-white rounded-xl border border-gray-200 flex flex-col items-center justify-center text-center p-2 md:p-3 hover:shadow-md transition-shadow">
					<div class="text-xs md:text-sm lg:text-base font-bold text-gray-300 mb-1">{features.noIdn}</div>
					<div class="text-[9px] md:text-[10px] font-bold text-gray-300 uppercase tracking-wider" set:html={features.noIdnSubtext}></div>
				</div>
				
				<!-- Box 4: No WHOIS Privacy -->
				<div class="bg-white rounded-xl border border-gray-200 flex flex-col items-center justify-center text-center p-2 md:p-3 hover:shadow-md transition-shadow">
					<div class="text-gray-300 mb-2">
						<svg class="w-6 h-6 md:w-8 md:h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
					</div>
					<div class="text-[9px] md:text-[10px] lg:text-xs font-bold text-gray-300 uppercase tracking-wider leading-tight" set:html={features.noWhoisPrivacy}></div>
				</div>
				
				<!-- Box 5: Restricted -->
				<div class="bg-white rounded-xl border border-gray-200 flex flex-col items-center justify-center text-center p-2 md:p-3 hover:shadow-md transition-shadow">
					<div class="text-(--color-secondary) mb-2">
						<svg class="w-6 h-6 md:w-8 md:h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-9-2c0-1.66 1.34-3 3-3s3 1.34 3 3v2H9V6zm9 14H6V10h12v10zm-6-3c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2z"/></svg>
					</div>
					<div class="text-[9px] md:text-[10px] lg:text-xs font-bold text-(--color-secondary) uppercase tracking-wider">{features.restricted}</div>
				</div>
				
				<!-- Box 6: No DNSSEC -->
				<div class="bg-white rounded-xl border border-gray-200 flex flex-col items-center justify-center text-center p-2 md:p-3 hover:shadow-md transition-shadow">
					<div class="text-gray-300 mb-2">
						<svg class="w-6 h-6 md:w-8 md:h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm0 10.99h7c-.53 4.12-3.28 7.79-7 8.94V12H5V6.3l7-3.11v8.8z"/></svg>
					</div>
					<div class="text-[9px] md:text-[10px] lg:text-xs font-bold text-gray-300 uppercase tracking-wider" set:html={features.noDnssec}></div>
				</div>
			</div>

			<!-- Right section: Pricing table card -->
			<div class="bg-white rounded-xl border border-gray-200 p-6 md:p-10 relative shadow-sm flex flex-col justify-center">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
                    <!-- Prices Column -->
                    <div class="flex flex-col gap-6 md:gap-8">
                        <div class="grid grid-cols-[1fr_auto] gap-4 items-baseline">
                            <span class="font-bold text-(--color-secondary) text-sm md:text-base">{pricing.registration?.label}</span>
                            <span class="text-gray-600 text-sm md:text-base font-medium text-right">{pricing.registration?.price}</span>
                        </div>
                        <div class="grid grid-cols-[1fr_auto] gap-4 items-baseline">
                            <span class="font-bold text-(--color-secondary) text-sm md:text-base">{pricing.renewal?.label}</span>
                            <span class="text-gray-600 text-sm md:text-base font-medium text-right">{pricing.renewal?.price}</span>
                        </div>
                        <div class="grid grid-cols-[1fr_auto] gap-4 items-baseline">
                            <span class="font-bold text-(--color-secondary) text-sm md:text-base">{pricing.transfer?.label}</span>
                            <span class="text-gray-600 text-sm md:text-base font-medium text-right">{pricing.transfer?.price}</span>
                        </div>
                        <div class="grid grid-cols-[1fr_auto] gap-4 items-baseline">
                            <span class="font-bold text-(--color-secondary) text-sm md:text-base">{pricing.restoration?.label}</span>
                            <span class="text-gray-400 text-sm md:text-base text-right">{pricing.restoration?.price}</span>
                        </div>
                        <div class="grid grid-cols-[1fr_auto] gap-4 items-baseline">
                            <span class="font-bold text-(--color-secondary) text-sm md:text-base">{pricing.ownerChange?.label}</span>
                            <span class="text-gray-600 text-sm md:text-base font-medium text-right">{pricing.ownerChange?.price}</span>
                        </div>
                    </div>

                    <!-- Details Column -->
                    <div class="flex flex-col gap-6 md:gap-8 md:border-l md:border-gray-100 md:pl-8 lg:pl-12 relative">
                        <div class="grid grid-cols-[1fr_auto] gap-4 items-baseline">
                            <span class="font-bold text-(--color-secondary) text-sm md:text-base">{details.registrationDuration?.label}</span>
                            <span class="text-gray-600 text-sm md:text-base text-right">{details.registrationDuration?.value}</span>
                        </div>
                        <div class="grid grid-cols-[1fr_auto] gap-4 items-baseline">
                            <span class="font-bold text-(--color-secondary) text-sm md:text-base">{details.renewalDuration?.label}</span>
                            <span class="text-gray-600 text-sm md:text-base text-right">{details.renewalDuration?.value}</span>
                        </div>
                        <div class="grid grid-cols-[1fr_auto] gap-4 items-baseline">
                            <span class="font-bold text-(--color-secondary) text-sm md:text-base">{details.registrationDelay?.label}</span>
                            <span class="text-gray-600 text-sm md:text-base text-right">{details.registrationDelay?.value}</span>
                        </div>
                        <div class="grid grid-cols-[1fr_auto] gap-4 items-baseline">
                            <span class="font-bold text-(--color-secondary) text-sm md:text-base">{details.transferDelay?.label}</span>
                            <span class="text-gray-600 text-sm md:text-base text-right">{details.transferDelay?.value}</span>
                        </div>
                    </div>
                </div>
                
                <!-- Info Icon -->
                <div class="absolute bottom-4 right-4 hidden md:block">
                    <svg class="w-8 h-8 text-blue-100" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/>
                    </svg>
                </div>
			</div>
		</div>
</Section>
