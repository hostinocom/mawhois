---
// Why register a .MA domain section
import Section from '../../ui/Section.astro';
import Title from '../../ui/Title.astro';
import Paragraph from '../../ui/Paragraph.astro';
import Subtitle from '../../ui/Subtitle.astro';

interface Props {
	title?: string;
	columns?: Array<{
		subtitle: string;
		paragraph: string;
	}>;
}

const {
	title = "Pourquoi dois-je enregistrer un nom de domaine Maroc ?",
	columns = []
} = Astro.props;
---

<Section backgroundColor="bg-(--color-tertiary)" extraClasses="pt-15 md:pt-30 pb-15 md:pb-30">
	<!-- Main title -->
	<Title>
		{title}
	</Title>
		
	<!-- Three columns - one row with three columns -->
	<div class="flex flex-col sm:flex-row gap-6 md:gap-8 lg:gap-12">
		{columns.map((column: { subtitle: string; paragraph: string }) => (
			<div class="flex-1">
				<Subtitle>
					{column.subtitle}
				</Subtitle>
				<Paragraph>
					<p set:html={column.paragraph} />
				</Paragraph>
			</div>
		))}
	</div>
</Section>

