---
import DomainSearchForm from '../ui/DomainSearchForm.astro';
import { registries } from '../../config/registries';
---

<section class="bg-(--color-secondary) px-6 py-20 md:py-32 md:px-16 lg:px-24">
	<div class="max-w-7xl mx-auto text-center">
		<h2 class="text-3xl md:text-4xl lg:text-5xl font-semibold text-white mb-12 md:mb-16">
			Entrez un nom de domaine
		</h2>
		
		<div class="flex justify-center">
			<DomainSearchForm registries={registries} />
		</div>
	</div>
</section>

