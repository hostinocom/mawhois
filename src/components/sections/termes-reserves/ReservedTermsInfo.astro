---
// Reserved terms section explaining protected .ma domain terms
import Section from '../../ui/Section.astro';
import Title from '../../ui/Title.astro';
import Paragraph from '../../ui/Paragraph.astro';

interface Props {
	title?: string;
	paragraphs?: string[];
}

const {
	title = "Termes réservés pour les noms de<br />domaine .ma",
	paragraphs = []
} = Astro.props;

---

<Section backgroundColor="bg-white" extraClasses="pt-15 md:pt-30">
	<Title>
		{title}
	</Title>
	
	<Paragraph>
		{paragraphs.map((paragraph: string) => <p set:html={paragraph} />)}
	</Paragraph>
</Section>

