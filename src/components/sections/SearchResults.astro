---
import DomainSearchForm from '../ui/DomainSearchForm';
import Button from '../ui/Button.astro';

interface Props {
	domain: string;
	registries: Array<{
		code: string;
		name: string;
		placeholder: string;
		extension: string;
	}>;
	defaultRegistry: {
		code: string;
		name: string;
		placeholder: string;
		extension: string;
	};
}

const { domain, registries, defaultRegistry } = Astro.props;

// Fetch domain availability from API service
let result: any;

const res = await fetch(
	Astro.url.origin + `/api/whois-ma?domain=${domain}`
);

result = await res.json();
console.log('result', result);
---

<!-- Header with Logo and Search Form -->
<header class="bg-[#022545] px-6 py-6 md:py-8 md:px-16 lg:px-24">
	<div class="max-w-7xl mx-auto">
		<div class="flex flex-col md:flex-row items-center gap-6 md:gap-8">
			<!-- Logo on the left -->
			<div class="flex-shrink-0">
				<a href="/" aria-label="WHOIS Maroc Home">
					<img src="/whoisma-wh.png" alt="WHOIS Maroc Logo" class="h-10 md:h-12" />
				</a>
			</div>
			
			<!-- Search Form in the middle - full width -->
			<div class="flex-1 w-full">
				<DomainSearchForm client:load registries={registries} defaultRegistry={defaultRegistry} />
			</div>
		</div>
	</div>
</header>

<!-- Results Section -->
<section class="bg-white px-6 py-12 md:py-20 md:px-16 lg:px-24" id="search-results">
	<div class="max-w-4xl mx-auto">
		
		{result.available ? (
			<!-- Domain Available -->
			<div class="text-center py-12">
				<div class="mb-8">
					<div class="inline-flex items-center justify-center w-20 h-20 bg-green-100 rounded-full mb-4">
						<svg class="w-12 h-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
						</svg>
					</div>
					<h2 class="text-3xl md:text-4xl font-light text-gray-900 mb-4">
						Le domaine <span class="font-semibold">{domain}</span> est disponible!
					</h2>
					<p class="text-lg text-gray-600">
						Vous pouvez enregistrer ce domaine dès maintenant.
					</p>
				</div>
				
				<div class="flex justify-center gap-4">
					<Button variant="primary" size="lg">
						Enregistrer maintenant
					</Button>
					<Button variant="ghost" size="lg" href="/">
						Nouvelle recherche
					</Button>
				</div>
			</div>
		) : (
			<!-- Domain Not Available -->
			<div class="py-8">
				<!-- Message -->
				<div class="text-center mb-12">
					<div class="inline-flex items-center justify-center w-20 h-20 bg-red-100 rounded-full mb-4">
						<svg class="w-12 h-12 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
						</svg>
					</div>
					<h2 class="text-2xl md:text-3xl font-light text-gray-900">
						Malheureusement, le domaine <span class="font-semibold">{domain}</span> est déjà enregistré.
					</h2>
				</div>

				<!-- WHOIS Information Table -->
				{result.info && (
					<div class="bg-white border border-gray-200 rounded-lg overflow-hidden shadow-sm">
						<div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
							<h3 class="text-lg font-semibold text-gray-900">Informations WHOIS</h3>
						</div>
						<div class="divide-y divide-gray-200">
							{Object.entries(result.info).map(([key, value]) => (
								<div class="px-6 py-4 flex flex-col sm:flex-row sm:items-start">
									<dt class="font-medium text-gray-700 sm:w-1/3 mb-1 sm:mb-0 capitalize">
										{key.replace(/_/g, ' ')}:
									</dt>
									<dd class="text-gray-900 sm:w-2/3 break-words">
										{Array.isArray(value) ? value.join(', ') : String(value)}
									</dd>
								</div>
							))}
						</div>
					</div>
				)}

				<!-- Actions -->
				<div class="mt-8 text-center">
					<Button variant="secondary" size="lg" href="/">
						<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
						</svg>
						Nouvelle recherche
					</Button>
				</div>
			</div>
		)}

	</div>
</section>

