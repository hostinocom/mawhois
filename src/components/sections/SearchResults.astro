---
import DomainSearchForm from '../ui/DomainSearchForm';
import Button from '../ui/Button.astro';

interface Props {
	domain: string;
	registries: Array<{
		code: string;
		name: string;
		placeholder: string;
		extension: string;
	}>;
	defaultRegistry: {
		code: string;
		name: string;
		placeholder: string;
		extension: string;
	};
}

const { domain, registries, defaultRegistry } = Astro.props;

// Function to format date from ISO string to YYYY-MM-DD
function formatDate(dateString: string): string {
	if (!dateString) return '';
	try {
		const date = new Date(dateString);
		const year = date.getFullYear();
		const month = String(date.getMonth() + 1).padStart(2, '0');
		const day = String(date.getDate()).padStart(2, '0');
		return `${year}-${month}-${day}`;
	} catch (error) {
		return dateString; // Return original if parsing fails
	}
}

// Fetch domain availability from API service
let result: any;

const res = await fetch(
	Astro.url.origin + `/api/whois-ma?domain=${domain}`
);

result = await res.json();
console.log('result', result);
---

<!-- Header with Logo and Search Form -->
<header class="bg-[#022545] px-6 py-6 md:py-8 md:px-16 lg:px-24">
	<div class="max-w-7xl mx-auto">
		<div class="flex flex-col md:flex-row items-center gap-6 md:gap-8">
			<!-- Logo on the left -->
			<div class="flex-shrink-0">
				<a href="/" aria-label="WHOIS Maroc Home">
					<img src="/whoisma-wh.png" alt="WHOIS Maroc Logo" class="h-10 md:h-12" />
				</a>
			</div>
			
			<!-- Search Form in the middle - full width -->
			<div class="flex-1 w-full">
				<DomainSearchForm client:load registries={registries} defaultRegistry={defaultRegistry} />
			</div>
		</div>
	</div>
</header>

<!-- Results Section -->
<section class="bg-white px-6 py-12 md:py-20 md:px-16 lg:px-24" id="search-results">
	<div class="max-w-4xl mx-auto">
		
		{result.available ? (
			<!-- Domain Available -->
			<div class="text-center py-12">
				<div class="mb-8">
					<div class="inline-flex items-center justify-center w-20 h-20 bg-green-100 rounded-full mb-4">
						<svg class="w-12 h-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
						</svg>
					</div>
					<h2 class="text-3xl md:text-4xl font-light text-gray-900 mb-4">
						Le domaine <span class="font-semibold">{domain}</span> est disponible!
					</h2>
					<p class="text-lg text-gray-600">
						Vous pouvez enregistrer ce domaine dès maintenant.
					</p>
				</div>
				
				<div class="flex justify-center gap-4">
					<Button variant="primary" size="lg">
						Enregistrer maintenant
					</Button>
					<Button variant="ghost" size="lg" href="/">
						Nouvelle recherche
					</Button>
				</div>
			</div>
		) : (
			<!-- Domain Not Available -->
			<div class="py-8">
				<!-- Message -->
				<div class="text-center mb-12">
					<div class="inline-flex items-center justify-center w-20 h-20 bg-red-100 rounded-full mb-4">
						<svg class="w-12 h-12 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
						</svg>
					</div>
					<h2 class="text-2xl md:text-3xl font-light text-gray-900">
						Malheureusement, le domaine <span class="font-semibold">{domain}</span> est déjà enregistré.
					</h2>
				</div>

				<!-- WHOIS Information Table -->
				{result.info && (
					<div class="space-y-8">
						<!-- Domain Information -->
						<div class="bg-[#d4e8d4] rounded-lg overflow-hidden">
							<div class="divide-y divide-white">
								<div class="grid grid-cols-1 md:grid-cols-2 px-6 py-3">
									<div class="font-semibold text-gray-900">Domain Name</div>
									<div class="text-gray-900">{result.info['Domain Name'] || result.info.domain}</div>
								</div>
								<div class="grid grid-cols-1 md:grid-cols-2 px-6 py-3">
									<div class="font-semibold text-gray-900">Status</div>
									<div class="text-gray-900">
										{(() => {
											const status = result.info['Domain Status'] || result.info.status || '';
											return status.toLowerCase().includes('active') ? 'Actif' : 'Inactif';
										})()}
									</div>
								</div>
								<div class="grid grid-cols-1 md:grid-cols-2 px-6 py-3">
									<div class="font-semibold text-gray-900">Registrar</div>
									<div class="text-gray-900">{result.info.Registrar || result.info.registrar}</div>
								</div>
								<div class="grid grid-cols-1 md:grid-cols-2 px-6 py-3">
									<div class="font-semibold text-gray-900">Creation Date</div>
									<div class="text-gray-900">{formatDate(result.info['Creation Date'] || result.info.created)}</div>
								</div>
								<div class="grid grid-cols-1 md:grid-cols-2 px-6 py-3">
									<div class="font-semibold text-gray-900">Expiration Date</div>
									<div class="text-gray-900">{formatDate(result.info['Registry Expiry Date'] || result.info['Registrar Registration Expiration Date'] || result.info.expires)}</div>
								</div>
								<div class="grid grid-cols-1 md:grid-cols-2 px-6 py-3">
									<div class="font-semibold text-gray-900">Last Update Date</div>
									<div class="text-gray-900">{formatDate(result.info['Updated Date'] || result.info.updated)}</div>
								</div>
							</div>
						</div>

						<!-- Contact Information -->
						<div class="bg-[#d4e8d4] rounded-lg overflow-hidden">
							<div class="divide-y divide-white">
								<div class="grid grid-cols-1 md:grid-cols-2 px-6 py-3">
									<div class="font-semibold text-gray-900">Registrant</div>
									<div class="text-gray-900">{result.info['Registrant Name'] || result.info.registrant}</div>
								</div>
								<div class="grid grid-cols-1 md:grid-cols-2 px-6 py-3">
									<div class="font-semibold text-gray-900">Administrative Contact</div>
									<div class="text-gray-900">{result.info['Admin Name'] || result.info.admin}</div>
								</div>
								{result.info['Admin Phone'] && (
									<div class="grid grid-cols-1 md:grid-cols-2 px-6 py-3">
										<div class="font-semibold text-gray-900"></div>
										<div class="text-gray-900">{result.info['Admin Phone']}</div>
									</div>
								)}
								{result.info['Admin Email'] && (
									<div class="grid grid-cols-1 md:grid-cols-2 px-6 py-3">
										<div class="font-semibold text-gray-900"></div>
										<div class="text-gray-900">{result.info['Admin Email']}</div>
									</div>
								)}
								<div class="grid grid-cols-1 md:grid-cols-2 px-6 py-3">
									<div class="font-semibold text-gray-900">Technical Contact</div>
									<div class="text-gray-900">{result.info['Tech Name'] || result.info.tech}</div>
								</div>
								{result.info['Tech Phone'] && (
									<div class="grid grid-cols-1 md:grid-cols-2 px-6 py-3">
										<div class="font-semibold text-gray-900"></div>
										<div class="text-gray-900">{result.info['Tech Phone']}</div>
									</div>
								)}
								{result.info['Tech Email'] && (
									<div class="grid grid-cols-1 md:grid-cols-2 px-6 py-3">
										<div class="font-semibold text-gray-900"></div>
										<div class="text-gray-900">{result.info['Tech Email']}</div>
									</div>
								)}
							</div>
						</div>

						<!-- Name Servers -->
						{result.info['Name Server'] && (
							<div class="bg-[#d4e8d4] rounded-lg overflow-hidden">
								<div class="divide-y divide-white">
									{Array.isArray(result.info['Name Server']) ? (
										result.info['Name Server'].map((ns: string, index: number) => (
											<div class="grid grid-cols-1 md:grid-cols-2 px-6 py-3">
												<div class="font-semibold text-gray-900">NS{index + 1}</div>
												<div class="text-gray-900">{ns}</div>
											</div>
										))
									) : (
										<div class="grid grid-cols-1 md:grid-cols-2 px-6 py-3">
											<div class="font-semibold text-gray-900">NS1</div>
											<div class="text-gray-900">{result.info['Name Server']}</div>
										</div>
									)}
								</div>
							</div>
						)}
					</div>
				)}

				<!-- Actions -->
				<div class="mt-8 text-center">
					<Button variant="secondary" size="lg" href="/">
						<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
						</svg>
						Nouvelle recherche
					</Button>
				</div>
			</div>
		)}

	</div>
</section>

