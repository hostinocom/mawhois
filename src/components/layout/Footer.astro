---
// Footer component for WHOIS Maroc
import { enFooter } from '../../config/i18n/en';
import { frFooter } from '../../config/i18n/fr';

interface Props {
	lang: "en" | "fr";
}

const lang = Astro.props.lang ;
const footerTranslations = lang === 'fr' ? frFooter : enFooter;
---

<footer class="bg-(--color-secondary) text-white px-6 py-20 md:py-30 md:px-16 lg:px-24 md:mt-13 ">
	<div class="max-w-7xl mx-auto">
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 md:gap-12">
			<!-- Logo Section -->
			<div class="lg:col-span-1">
				<a href={footerTranslations.logo.href} aria-label="WHOIS Morocco Home" class="inline-block mb-4">
					<img src="/whois-logo.png" alt={footerTranslations.logo.alt} class="h-10 md:h-12" />
				</a>
				<p class="text-white/70 text-sm leading-relaxed">
					{footerTranslations.description}
				</p>
			</div>

			<!-- Pages Navigation -->
			<div>
				<h3 class="text-lg font-semibold mb-4 text-white">{footerTranslations.sections.pages.title}</h3>
				<nav class="flex flex-col gap-3">
					{footerTranslations.sections.pages.links.map((link) => (
						<a href={link.href} class="text-white/70 hover:text-white transition-colors text-sm">
							{link.label}
						</a>
					))}
				</nav>
			</div>

			<!-- Contact Information -->
			<div>
				<h3 class="text-lg font-semibold mb-4 text-white">{footerTranslations.sections.contact.title}</h3>
				<div class="flex flex-col gap-3 text-sm">
					<div class="flex items-start gap-3">
						<svg class="w-5 h-5 text-white/70 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
						</svg>
						<span class="text-white/70">
							{footerTranslations.sections.contact.email}
						</span>
					</div>
					<div class="flex items-start gap-3">
						<svg class="w-5 h-5 text-white/70 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
						</svg>
						<a href={`tel:${footerTranslations.sections.contact.phone.replace(/\s/g, '')}`} class="text-white/70 hover:text-white transition-colors">
							{footerTranslations.sections.contact.phone}
						</a>
					</div>
					<div class="flex items-start gap-3">
						<svg class="w-5 h-5 text-white/70 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
						</svg>
						<span class="text-white/70">
							{footerTranslations.sections.contact.location}
						</span>
					</div>
				</div>
			</div>

			<!-- Additional Links -->
			<div>
				<h3 class="text-lg font-semibold mb-4 text-white">{footerTranslations.sections.usefulLinks.title}</h3>
				<nav class="flex flex-col gap-3">
					{footerTranslations.sections.usefulLinks.links.map((link) => (
						<a href={link.href} class="text-white/70 hover:text-white transition-colors text-sm">
							{link.label}
						</a>
					))}
				</nav>
			</div>
		</div>

		<!-- Copyright -->
		<div class="mt-8 pt-8 border-t border-white/10">
			<div class="flex flex-col md:flex-row justify-between items-center gap-4">
				<p class="text-white/60 text-sm text-center md:text-left">
					{footerTranslations.copyright}
				</p>
				<div class="flex gap-6 text-sm">
					<a href={footerTranslations.legal.legalNotice.href} class="text-white/60 hover:text-white/80 transition-colors">
						{footerTranslations.legal.legalNotice.label}
					</a>
					<a href={footerTranslations.legal.privacyPolicy.href} class="text-white/60 hover:text-white/80 transition-colors">
						{footerTranslations.legal.privacyPolicy.label}
					</a>
				</div>
			</div>
		</div>
	</div>
</footer>

