---
export interface Props {
	id: string;
	type?: 'error' | 'success' | 'warning' | 'info';
	autoHide?: boolean;
	autoHideDuration?: number;
}

const { 
	id, 
	type = 'info', 
	autoHide = true, 
	autoHideDuration = 5000 
} = Astro.props;

// Define styles for each message type
const typeStyles = {
	error: {
		container: 'bg-red-50 border-red-200 text-red-700',
		icon: 'text-red-500',
		iconPath: 'M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z'
	},
	success: {
		container: 'bg-green-50 border-green-200 text-green-700',
		icon: 'text-green-500',
		iconPath: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z'
	},
	warning: {
		container: 'bg-yellow-50 border-yellow-200 text-yellow-700',
		icon: 'text-yellow-500',
		iconPath: 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z'
	},
	info: {
		container: 'bg-blue-50 border-blue-200 text-blue-700',
		icon: 'text-blue-500',
		iconPath: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z'
	}
};

const styles = typeStyles[type];
---

<div 
	id={id}
	class={`hidden mt-3 px-4 py-3 border rounded-lg text-sm sm:text-base transition-all duration-300 ${styles.container}`}
	role="alert"
	data-auto-hide={autoHide}
	data-auto-hide-duration={autoHideDuration}
>
	<div class="flex items-start gap-2">
		<svg class={`w-5 h-5 shrink-0 mt-0.5 ${styles.icon}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
			<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={styles.iconPath}></path>
		</svg>
		<span id={`${id}-text`} class="flex-1"></span>
		<button 
			type="button"
			class="ml-2 shrink-0 hover:opacity-70 transition-opacity"
			aria-label="Fermer le message"
			onclick={`document.getElementById('${id}').classList.add('hidden')`}
		>
			<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
			</svg>
		</button>
	</div>
</div>

<script>
	// Global utility functions for showing/hiding messages
	declare global {
		interface Window {
			showMessage: (id: string, message: string, type?: string) => void;
			hideMessage: (id: string) => void;
		}
	}

	window.showMessage = function(id: string, message: string, type?: string) {
		const messageContainer = document.getElementById(id);
		const messageText = document.getElementById(`${id}-text`);
		
		if (messageContainer && messageText) {
			messageText.textContent = message;
			messageContainer.classList.remove('hidden');
			
			// Auto-hide if enabled
			const autoHide = messageContainer.dataset.autoHide === 'true';
			const duration = parseInt(messageContainer.dataset.autoHideDuration || '5000');
			
			if (autoHide) {
				setTimeout(() => {
					messageContainer.classList.add('hidden');
				}, duration);
			}
		}
	};

	window.hideMessage = function(id: string) {
		const messageContainer = document.getElementById(id);
		if (messageContainer) {
			messageContainer.classList.add('hidden');
		}
	};
</script>

