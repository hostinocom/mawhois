---
interface Props {
    image: string;
    alt: string;
}

const { image, alt } = Astro.props as Props;
---

<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
    <div class="space-y-6">
		<slot/>
	</div>
    
	<div class="flex justify-center lg:justify-end">
	   <img 
			src={image} 
			alt={alt}
			class="w-full max-w-md lg:max-w-lg object-contain"
			loading="lazy"
		/>
	</div>
</div>

