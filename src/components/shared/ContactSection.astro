---
import Section from '../ui/Section.astro';
import Button from '../ui/Button.astro';

interface Props {
	title?: string;
	description?: string;
	phone?: string;
	whatsapp?: string;
	email?: string;
	privacyPolicyUrl?: string;
}

const {
	title = "Contacter un conseiller",
	description = "L'équipe se met à votre disposition pour répondre à toutes vos questions.",
	phone = "+212 05 31 03 11 86",
	whatsapp = "+212 663 75 09 08",
	email = "info@whoisma.com",
	privacyPolicyUrl = "/conditions-generales",
} = Astro.props;
---

<Section backgroundColor="bg-white">
	<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
		<!-- Left Section: Contact Information -->
		<div class="flex flex-col space-y-8">
			<!-- Title -->
			<div>
				<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-(--color-secondary) mb-4">
					{title}
					<span class="block w-20 h-1 bg-(--color-primary) mt-2"></span>
				</h2>
				<p class="text-base md:text-lg text-(--color-secondary) opacity-80 leading-relaxed">
					{description}
				</p>
			</div>

			<!-- Phone Contact -->
			<div>
				<h3 class="text-sm md:text-base font-semibold text-(--color-secondary) uppercase tracking-wide mb-3">
					DES QUESTIONS?
				</h3>
				<a 
					href={`tel:${phone.replace(/\s/g, '')}`}
					class="flex items-center gap-3 text-lg md:text-xl font-bold text-(--color-secondary) hover:text-(--color-primary) transition-colors"
					aria-label={`Appeler ${phone}`}
				>
					<svg 
						class="w-6 h-6 text-(--color-primary)" 
						fill="none" 
						stroke="currentColor" 
						viewBox="0 0 24 24"
						aria-hidden="true"
					>
						<path 
							stroke-linecap="round" 
							stroke-linejoin="round" 
							stroke-width="2" 
							d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
						/>
					</svg>
					{phone}
				</a>
			</div>

			<!-- WhatsApp Contact -->
			<div>
				<h3 class="text-sm md:text-base font-semibold text-(--color-secondary) uppercase tracking-wide mb-3">
					WHATSAPP
				</h3>
				<a 
					href={`https://wa.me/${whatsapp.replace(/\s/g, '').replace('+', '')}`}
					target="_blank"
					rel="noopener noreferrer"
					class="flex items-center gap-3 text-lg md:text-xl font-bold text-(--color-secondary) hover:text-(--color-primary) transition-colors"
					aria-label={`Contacter sur WhatsApp ${whatsapp}`}
				>
					<svg 
						class="w-6 h-6 text-(--color-primary)" 
						fill="currentColor" 
						viewBox="0 0 24 24"
						aria-hidden="true"
					>
						<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
					</svg>
					{whatsapp}
				</a>
			</div>

			<!-- Email Contact -->
			<div>
				<h3 class="text-sm md:text-base font-semibold text-(--color-secondary) uppercase tracking-wide mb-3">
					CONSULTATION PAR EMAIL?
				</h3>
				<a 
					href={`mailto:${email}`}
					class="text-lg md:text-xl font-bold text-(--color-secondary) hover:text-(--color-primary) transition-colors border-b-2 border-(--color-primary) inline-block"
					aria-label={`Envoyer un email à ${email}`}
				>
					{email}
				</a>
			</div>
		</div>

		<!-- Right Section: Contact Form -->
		<div class="bg-white rounded-lg shadow-lg p-6 md:p-8">
			<form 
				id="contact-form"
				class="space-y-5"
				method="POST"
				action="/api/contact"
			>
				<!-- Name Field -->
				<div>
					<label 
						for="contact-name" 
						class="block text-sm font-semibold text-(--color-secondary) mb-2"
					>
						Nom et prénom
					</label>
					<input 
						type="text" 
						id="contact-name"
						name="name"
						placeholder="Votre nom complet"
						class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-(--color-primary) focus:border-transparent text-(--color-secondary) placeholder:text-gray-400 transition-all"
						aria-label="Nom et prénom"
					/>
				</div>

				<!-- Company Field -->
				<div>
					<label 
						for="contact-company" 
						class="block text-sm font-semibold text-(--color-secondary) mb-2"
					>
						Entreprise
					</label>
					<input 
						type="text" 
						id="contact-company"
						name="company"
						placeholder="Nom de votre entreprise"
						class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-(--color-primary) focus:border-transparent text-(--color-secondary) placeholder:text-gray-400 transition-all"
						aria-label="Entreprise"
					/>
				</div>

				<!-- Phone Field -->
				<div>
					<label 
						for="contact-phone" 
						class="block text-sm font-semibold text-(--color-secondary) mb-2"
					>
						Téléphone
					</label>
					<input 
						type="tel" 
						id="contact-phone"
						name="phone"
						placeholder="Votre numéro de téléphone"
						class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-(--color-primary) focus:border-transparent text-(--color-secondary) placeholder:text-gray-400 transition-all"
						aria-label="Téléphone"
					/>
				</div>

				<!-- Email Field -->
				<div>
					<label 
						for="contact-email" 
						class="block text-sm font-semibold text-(--color-secondary) mb-2"
					>
						Email <span class="text-(--color-primary)">*</span>
					</label>
					<input 
						type="email" 
						id="contact-email"
						name="email"
						required
						placeholder="votre@email.com"
						class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-(--color-primary) focus:border-transparent text-(--color-secondary) placeholder:text-gray-400 transition-all"
						aria-label="Email (requis)"
					/>
				</div>

				<!-- Message Field -->
				<div>
					<label 
						for="contact-message" 
						class="block text-sm font-semibold text-(--color-secondary) mb-2"
					>
						Message <span class="text-(--color-primary)">*</span>
					</label>
					<textarea 
						id="contact-message"
						name="message"
						required
						rows="5"
						placeholder="Votre message..."
						class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-(--color-primary) focus:border-transparent text-(--color-secondary) placeholder:text-gray-400 transition-all resize-none"
						aria-label="Message (requis)"
					></textarea>
				</div>

				<!-- Submit Button -->
				<div class="flex justify-center pt-2">
					<Button type="submit" variant="primary" size="lg" class="w-full md:w-auto min-w-[200px]">
						Envoyer
					</Button>
				</div>

				<!-- Privacy Policy -->
				<p class="text-xs md:text-sm text-gray-500 text-center leading-relaxed">
					En cliquant sur "Envoyer", vous acceptez notre{' '}
					<a 
						href={privacyPolicyUrl}
						class="underline hover:text-(--color-primary) transition-colors"
					>
						politique de confidentialité
					</a>
					.
				</p>
			</form>
		</div>
	</div>
</Section>

<script>
	// Handle form submission
	document.addEventListener('DOMContentLoaded', () => {
		const form = document.getElementById('contact-form') as HTMLFormElement;
		if (!form) return;

		form.addEventListener('submit', async (e) => {
			e.preventDefault();
			
			const formData = new FormData(form);
			const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
			const originalText = submitButton?.textContent || 'Envoyer';
			
			// Disable button and show loading state
			if (submitButton) {
				submitButton.disabled = true;
				submitButton.textContent = 'Envoi en cours...';
			}

			try {
				const response = await fetch('/api/contact', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json',
					},
					body: JSON.stringify({
						name: formData.get('name'),
						company: formData.get('company'),
						phone: formData.get('phone'),
						email: formData.get('email'),
						message: formData.get('message'),
					}),
				});

				const data = await response.json();

				if (response.ok && data.success) {
					// Success: Show success message and reset form
					alert('Message envoyé avec succès! Nous vous répondrons dans les plus brefs délais.');
					form.reset();
				} else {
					// Error: Show error message
					alert(data.error || 'Une erreur est survenue. Veuillez réessayer.');
				}
			} catch (error) {
				console.error('Error submitting form:', error);
				alert('Une erreur est survenue. Veuillez réessayer.');
			} finally {
				// Re-enable button
				if (submitButton) {
					submitButton.disabled = false;
					submitButton.textContent = originalText;
				}
			}
		});
	});
</script>

