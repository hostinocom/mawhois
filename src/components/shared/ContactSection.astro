---
import Section from '../ui/Section.astro';
import Button from '../ui/Button.astro';

interface Props {
	title: string;
	description: string;
	phone: Record<string, string>;
	whatsapp: Record<string, string>;
	email: Record<string, string>;
	privacyPolicyUrl: { href: string; linkText: string, label: string };
	formFields: Record<string, { label: string; placeholder?: string }>;
}

const {
	title,
	description,
	phone,
	whatsapp,
	email,
	privacyPolicyUrl,
	formFields,
} = Astro.props;
---

<Section backgroundColor="bg-white">
	<div class="grid justify-center lg:grid-cols-2 sm:text-left text-center gap-8 lg:gap-12">
			<!-- Left Section: Contact Information -->
			<div class="space-y-8 content-center">
				<!-- Title -->
				<div>
					<h1 class="text-4xl md:text-5xl lg:text-6xl leading-[1.2] font-semibold text-(--color-secondary) sm:mb-4 mb-[30px]" set:html={title} />
					<p class="text-base md:text-lg text-(--color-secondary) opacity-80 leading-relaxed">
						{description}
					</p>
				</div>

				<!-- Phone Contact -->
				<div class="space-y-2 flex sm:justify-start justify-center">
					<div class="flex items-center gap-3">
						<div class="sm:w-[50px] w-[35px] bg-(--color-primary) flex justify-center items-center sm:h-[50px] h-[35px] rounded-full">
							<svg 
								class="sm:w-8 w-6 h-6 sm:h-8 text-white shrink-0" 
								fill="currentColor" 
								viewBox="0 0 20 20"
								aria-hidden="true"
							>
								<path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
							</svg>
						</div>
						<div class="flex flex-col gap-[8px]">
							<p class="text-[15px] font-normal text-(--color-secondary) uppercase tracking-wide">{phone.label}</p>
							<a 
								href={`tel:${phone.value.replace(/\s/g, '')}`}
								class="text-(--color-secondary) tracking-[-0.5px] font-semibold text-[25px] hover:text-(--color-primary) transition-colors"
								aria-label={`Appeler ${phone.value}`}
							>
								{phone.value}
							</a>
						</div>
					</div>
				</div>

				<!-- WhatsApp Contact -->
				<div class="space-y-2 flex sm:justify-start justify-center">
					<div class="flex items-center gap-3">
						<div class="sm:w-[50px] w-[35px] bg-(--color-primary) flex justify-center items-center sm:h-[50px] h-[35px] rounded-full">
							<svg 
								class="sm:w-8 w-6 h-6 sm:h-8 text-white shrink-0" 
								fill="currentColor" 
								viewBox="0 0 24 24"
								aria-hidden="true"
							>
								<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
							</svg>
						</div>
						<div class="flex flex-col gap-[8px]">
							<p class="text-[15px] font-normal text-(--color-secondary) uppercase tracking-wide">{whatsapp.label}</p>
							<a 
								href={`https://wa.me/${whatsapp.value.replace(/\s/g, '').replace('+', '')}`}
								target="_blank"
								rel="noopener noreferrer"
								class="text-(--color-secondary) tracking-[-0.5px] font-semibold text-[25px] hover:text-(--color-primary) transition-colors"
								aria-label={`Contacter sur WhatsApp ${whatsapp.value}`}
							>
								{whatsapp.value}
							</a>
						</div>
					</div>
				</div>

				<!-- Email Contact -->
				<div class="space-y-2 text-center sm:text-left">
					<p class="text-[15px] font-normal text-(--color-secondary) uppercase tracking-wide">{email.label}</p>
					<a 
						href={`mailto:${email.value}`}
						class="text-(--color-secondary) font-semibold text-[25px] border-b-2 border-(--color-primary) hover:text-(--color-primary) transition-colors inline-block"
						aria-label={`Envoyer un email à ${email.value}`}
					>
						{email.value}
					</a>
				</div>
			</div>

			<!-- Right Section: Contact Form -->
			<div class="bg-white rounded-[10px] py-[60px] px-[30px] md:px-[40px] shadow-[0_4px_20px_rgba(0,0,0,0.12)]">
				<form 
					id="contact-form"
					class="gap-[25px] grid grid-cols-2"
					method="POST"
					action="/api/email"
				>
					<!-- Name Field -->
					<div class="col-span-2 md:col-span-1">
						<label 
							for="contact-name" 
							class="block text-left text-[15px] font-normal text-(--color-secondary) mb-2"
						>
							{formFields.name.label}
						</label>
						<input 
							type="text" 
							id="contact-name"
							name="name"
							placeholder={formFields.name.placeholder}
							class="w-full px-4 bg-gray-100 py-3 rounded-[26px] focus:border-(--color-primary) focus:ring-2 focus:ring-(--color-primary)/20 outline-none transition-all text-(--color-secondary) placeholder:text-gray-400"
							aria-label="Nom et prénom"
						/>
					</div>

					<!-- Company Field -->
					<div class="col-span-2 md:col-span-1">
						<label 
							for="contact-company" 
							class="block text-left text-[15px] font-normal text-(--color-secondary) mb-2"
						>
							{formFields.company.label}
						</label>
						<input 
							type="text" 
							id="contact-company"
							name="company"
							placeholder={formFields.company.placeholder}
							class="w-full px-4 bg-gray-100 py-3 rounded-[26px] focus:border-(--color-primary) focus:ring-2 focus:ring-(--color-primary)/20 outline-none transition-all text-(--color-secondary) placeholder:text-gray-400"
							aria-label="Entreprise"
						/>
					</div>

					<!-- Phone Field -->
					<div class="col-span-2 md:col-span-1">
						<label 
							for="contact-phone" 
							class="block text-left text-[15px] font-normal text-(--color-secondary) mb-2"
						>
							{formFields.phone.label}
						</label>
						<input 
							type="tel" 
							id="contact-phone"
							name="phone"
							placeholder={formFields.phone.placeholder}
							class="w-full px-4 bg-gray-100 py-3 rounded-[26px] focus:border-(--color-primary) focus:ring-2 focus:ring-(--color-primary)/20 outline-none transition-all text-(--color-secondary) placeholder:text-gray-400"
							aria-label="Téléphone"
						/>
					</div>

					<!-- Email Field -->
					<div class="col-span-2 md:col-span-1">
						<label 
							for="contact-email" 
							class="block text-left text-[15px] font-normal text-(--color-secondary) mb-2"
						>
							{formFields.email.label} <span class="text-red-500">*</span>
						</label>
						<input 
							type="email" 
							id="contact-email"
							name="email"
							required
							placeholder={formFields.email.placeholder}
							class="w-full px-4 bg-gray-100 py-3 rounded-[26px] focus:border-(--color-primary) focus:ring-2 focus:ring-(--color-primary)/20 outline-none transition-all text-(--color-secondary) placeholder:text-gray-400"
							aria-label="Email (requis)"
						/>
					</div>

					<!-- Message Field -->
					<div class="col-span-2">
						<label 
							for="contact-message" 
							class="block text-left text-[15px] font-normal text-(--color-secondary) mb-2"
						>
							{formFields.message.label} <span class="text-red-500">*</span>
						</label>
						<textarea 
							id="contact-message"
							name="message"
							required
							rows="5"
							placeholder={formFields.message.placeholder}
							class="w-full px-4 bg-gray-100 py-3 rounded-[26px] focus:border-(--color-primary) focus:ring-2 focus:ring-(--color-primary)/20 outline-none transition-all resize-none text-(--color-secondary) placeholder:text-gray-400"
							aria-label="Message (requis)"
						></textarea>
					</div>

					<!-- Submit Button -->
					<div class="col-span-2 text-center">
						<Button 
							type="submit" 
							variant="primary" 
							size="lg" 
							class="bg-(--color-primary)! hover:bg-(--color-primary)/90! text-white font-semibold! w-full sm:w-[80%] mx-auto py-[13px] text-center rounded-[26px]! transition-colors"
						>
							{formFields.submit.label}
						</Button>
						
						<!-- Privacy Policy -->
						<p class="text-xs text-gray-400 text-center max-w-md mx-auto mt-4">
							{privacyPolicyUrl.label}
							<a 
								href={privacyPolicyUrl.href}
								class="underline hover:text-(--color-primary) transition-colors"
							>
								{privacyPolicyUrl.linkText}
							</a>.
						</p>
					</div>
				</form>
			</div>
		</div>
</Section>

<script>
	// Handle form submission
	document.addEventListener('DOMContentLoaded', () => {
		const form = document.getElementById('contact-form') as HTMLFormElement;
		if (!form) return;

		form.addEventListener('submit', async (e) => {
			e.preventDefault();
			
			const formData = new FormData(form);
			const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
			const originalText = submitButton?.textContent || 'Envoyer';
			
			// Disable button and show loading state
			if (submitButton) {
				submitButton.disabled = true;
				submitButton.textContent = 'Envoi en cours...';
			}

			try {
				const response = await fetch('/api/email', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json',
					},
					body: JSON.stringify({
						name: formData.get('name'),
						company: formData.get('company'),
						phone: formData.get('phone'),
						email: formData.get('email'),
						message: formData.get('message'),
					}),
				});

				const jsonData: { success?: boolean; error?: string; message?: string } = await response.json();

				if (response.ok && jsonData.success) {
					// Success: Show success message and reset form
					alert(jsonData.message || 'Message envoyé avec succès! Nous vous répondrons dans les plus brefs délais.');
					form.reset();
				} else {
					// Error: Show error message
					alert(jsonData.error || 'Une erreur est survenue. Veuillez réessayer.');
				}
			} catch (error) {
				console.error('Error submitting form:', error);
				alert('Une erreur est survenue. Veuillez réessayer.');
			} finally {
				// Re-enable button
				if (submitButton) {
					submitButton.disabled = false;
					submitButton.textContent = originalText;
				}
			}
		});
	});
</script>

