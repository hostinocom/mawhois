---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/propos/Hero.astro';
import AboutSection from '../components/sections/propos/AboutSection.astro';
import { enMetaTags } from '../config/metaTags';
import { enAPropos } from '../config/i18n/en';

const { title, description, canonical_url, ogAlt, imageUrl } = enMetaTags.aPropos;

const articleSchema = {
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "WebPage",
			"@id": `${canonical_url}/#webpage`,
			url: canonical_url,
			name: title,
			description: description,
			isPartOf: {
				"@id": `https://www.mawhois.com/#website`,
				},
		},
		{
			"@type": "BreadcrumbList",
			"@id": `${canonical_url}/#breadcrumb`,
			itemListElement: [
				{
					"@type": "ListItem",
					position: 1,
					item: {
						"@id": canonical_url,
						name: "Accueil",
					},
				},
				{
				    "@type": "ListItem",
					position: 2,
					item: {
						"@id": canonical_url,
						name: "Ã€ propos",
					},
				},
			],
		},

		{
			"@type": "AboutPage",
			name: title,
			description: description,
		},
	],
};	
---

<Layout 
	title={title}
	description={description}
	lang="en"
	canonical_url={canonical_url}
	imageUrl={imageUrl}
	ogAlt={ogAlt}
	articleSchema={articleSchema}
>
	
	<Hero title={enAPropos.Hero.title} />
	<AboutSection 
		title={enAPropos.About.title}
		paragraphs={enAPropos.About.paragraphs}
		companyInfo={enAPropos.About.companyInfo}
		legalInfo={enAPropos.About.legalInfo}
		accreditation={enAPropos.About.accreditation}
		legalNotice={enAPropos.About.legalNotice}
		contact={enAPropos.About.contact}
	/>
	
</Layout>

