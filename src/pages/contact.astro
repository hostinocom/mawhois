---
export const prerender = true;
import Layout from '../layouts/Layout.astro';
import ContactSection from '../components/shared/ContactSection.astro';
import { enMetaTags } from '../config/metaTags';
import { enContact } from '../config/i18n/en';

const { title, description, canonical_url, ogAlt, imageUrl } = enMetaTags.contact;

const articleSchema = {
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "WebPage",
			"@id": `${canonical_url}/#webpage`,
			url: canonical_url,
			name: title,
			description: description,
			isPartOf: {
				"@id": `https://www.mawhois.com/#website`,
				},
		},
		{
			"@type": "BreadcrumbList",
			"@id": `${canonical_url}/#breadcrumb`,
			itemListElement: [
				{
					"@type": "ListItem",
					position: 1,
					item: {
						"@id": canonical_url,
						name: "Accueil",
					},
				},
				{
				    "@type": "ListItem",
					position: 2,
					item: {
						"@id": canonical_url,
						name: "Ã€ propos",
					},
				},
			],
		},

		{
			"@type": "AboutPage",
			name: title,
			description: description,
		},
	],
};
---

<Layout 
	title={title} 
	description={description} 
	lang="en"
	canonical_url={canonical_url} 
	imageUrl={imageUrl} 
	ogAlt={ogAlt}
	articleSchema={articleSchema}
>

	<div class="w-full min-h-screen md:py-20 py-10">

			<ContactSection 
				title={enContact.title}
				description={enContact.description}
				phone={enContact.phone}
				whatsapp={enContact.whatsapp}
				email={enContact.email}
				privacyPolicyUrl={enContact.privacyPolicyUrl}
				formFields={enContact.formFields}
			/>
	</div>
</Layout>

