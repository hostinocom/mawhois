---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/domaineMaroc/Hero.astro';
import DomainInfo from '../components/sections/domaineMaroc/DomainInfo.astro';
import WhyRegister from '../components/sections/domaineMaroc/WhyRegister.astro';
import WhatIsDomain from '../components/sections/domaineMaroc/WhatIsDomain.astro';
import Pricing from '../components/sections/domaineMaroc/Pricing.astro';
import FAQ from '../components/ui/FAQ.astro';
import { metaTags } from '../config/metaTags';
import { enNomDeDomaineMaroc } from '../config/i18n/en';
import { enRegistries } from '../config/registries';

const locale = 'en';
const { title, description, canonical_url, ogAlt, imageUrl, articleSchema } = metaTags.nomDeDomaineMaroc;
---

<Layout 
	title={title}
	description={description}
	lang={locale}
	canonical_url={canonical_url}
	imageUrl={imageUrl}
	ogAlt={ogAlt}
	articleSchema={articleSchema}
>
	
	<Hero 
		subtitle={enNomDeDomaineMaroc.Hero.subtitle}
		title={enNomDeDomaineMaroc.Hero.title}
		price={enNomDeDomaineMaroc.Hero.price}
		registries={enRegistries}
	/>
	<DomainInfo 
		title={enNomDeDomaineMaroc.DomainInfo.title}
		paragraphs={enNomDeDomaineMaroc.DomainInfo.paragraphs}
	/>
	<WhyRegister 
		title={enNomDeDomaineMaroc.WhyRegister.title}
		columns={enNomDeDomaineMaroc.WhyRegister.columns}
	/>
	<WhatIsDomain 
		title={enNomDeDomaineMaroc.WhatIsDomain.title}
		paragraphs={enNomDeDomaineMaroc.WhatIsDomain.paragraphs}
	/>
	<Pricing 
		title={enNomDeDomaineMaroc.Pricing.title}
		intro={enNomDeDomaineMaroc.Pricing.intro}
		features={enNomDeDomaineMaroc.Pricing.features}
		pricing={enNomDeDomaineMaroc.Pricing.pricing}
		details={enNomDeDomaineMaroc.Pricing.details}
	/>
	<FAQ faqs={enNomDeDomaineMaroc.FAQ.faqs} title={enNomDeDomaineMaroc.FAQ.title} />
	
</Layout>

