---
export const prerender = true;
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/termes-reserves/Hero.astro';
import ReservedTermsInfo from '../components/sections/termes-reserves/ReservedTermsInfo.astro';
import ReservedTermsSection from '../components/sections/termes-reserves/ReservedTermsSection.astro';
import { enMetaTags } from '../config/metaTags';
import { enTermesReserves } from '../config/i18n/en';
import { enReservedTerms } from '../config/reservedTerms';

const { title, description, canonical_url, ogAlt, imageUrl } = enMetaTags.termesReserves;

const articleSchema = {
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "WebPage",
			"@id": `${canonical_url}/#webpage`,
			url: canonical_url,
			name: title,
			description: description,
			isPartOf: {
				"@id": `https://www.mawhois.com/#website`,
				},
		},
		{
			"@type": "BreadcrumbList",
			"@id": `${canonical_url}/#breadcrumb`,
			itemListElement: [
				{
					"@type": "ListItem",
					position: 1,
					item: {
						"@id": canonical_url,
						name: "Accueil",
					},
				},
				{
					"@type": "ListItem",
					position: 2,
					item: {
						"@id": canonical_url,
						name: "Ã€ propos",
					},
				},
			],
		},

		{
			"@type": "AboutPage",
			name: title,
			description: description,
		},
	],
};

---

<Layout 
	title={title}
	description={description}
	lang="en"
	canonical_url={canonical_url}
	imageUrl={imageUrl}
	ogAlt={ogAlt}
	articleSchema={articleSchema}
>
	
	<Hero title={enTermesReserves.Hero.title} />
	<ReservedTermsInfo 
		title={enTermesReserves.ReservedTermsInfo.title}
		paragraphs={enTermesReserves.ReservedTermsInfo.paragraphs}
	/>
	<ReservedTermsSection title="List of Reserved Terms" reservedTerms={enReservedTerms} source="Official list of reserved terms (PDF)" />
	
</Layout>

