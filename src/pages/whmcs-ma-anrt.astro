---
export const prerender = true;
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/WHMCS/Hero.astro';
import WhmcsInfo from '../components/sections/WHMCS/WhmcsInfo.astro';
import WhmcsInfoMa from '../components/sections/WHMCS/WhmcsInfo.ma.astro';
import ContactSection from '../components/shared/ContactSection.astro';
import { enMetaTags } from '../config/metaTags';
import { enWHMCS } from '../config/i18n/en';
import FAQ from '../components/ui/FAQ.astro';
import { enContact } from '../config/i18n/en';

const { title, description, canonical_url, ogAlt, imageUrl } = enMetaTags.whmcs;

const articleSchema = {
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "WebPage",
			"@id": `${canonical_url}/#webpage`,
			url: canonical_url,
			name: title,
			description: description,
			isPartOf: {
				"@id": `https://www.mawhois.com/#website`,
				},
		},
		{
			"@type": "BreadcrumbList",
			"@id": `${canonical_url}/#breadcrumb`,
			itemListElement: [
				{
					"@type": "ListItem",
					position: 1,
					item: {
						"@id": canonical_url,
						name: "Accueil",
					},
				},
				{
				    "@type": "ListItem",
					position: 2,
					item: {
						"@id": canonical_url,
						name: "Ã€ propos",
					},
				},
			],
		},

{
      "@type": "Product",
      name: title,
      url: canonical_url,
      description: description,
      brand: { "@type": "Brand", name: "WhoisMA" },
      offers: {
        "@type": "AggregateOffer",
        url: canonical_url,
        lowPrice: "118",
        priceCurrency: "MAD",
        availability: "InStock",
      },
      aggregateRating: {
        "@type": "AggregateRating",
        ratingValue: "5",
        reviewCount: "12",
      },
    },
	],
};
---

<Layout 
	title={title} 
	description={description} 
	lang="en"
	canonical_url={canonical_url} 
	imageUrl={imageUrl} 
	ogAlt={ogAlt}
	articleSchema={articleSchema}
>
	<Hero title={enWHMCS.Hero.title} />
	<WhmcsInfo 
		title={enWHMCS.WhmcsInfo.title}
		paragraphs={enWHMCS.WhmcsInfo.paragraphs}
		button={enWHMCS.WhmcsInfo.button}
		image={enWHMCS.WhmcsInfo.image}
	/>
	<WhmcsInfoMa 
		title={enWHMCS.WhmcsInfoMa.title}
		paragraphs={enWHMCS.WhmcsInfoMa.paragraphs}
	/>
	<ContactSection 
		title={enContact.title}
		description={enContact.description}
		phone={enContact.phone}
		whatsapp={enContact.whatsapp}
		email={enContact.email}
		privacyPolicyUrl={enContact.privacyPolicyUrl}
		formFields={enContact.formFields}
	/>
	<FAQ faqs={enWHMCS.FAQ.faqs} title={enWHMCS.FAQ.title} />
	
</Layout>

