---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/conditions-generales/Hero.astro';
import TermsSection from '../components/sections/conditions-generales/TermsSection.astro';
import { enMetaTags } from '../config/metaTags';
import { enConditionsGenerales } from '../config/i18n/en';

const { title, description, canonical_url, ogAlt, imageUrl } = enMetaTags.conditionsGenerales;

const articleSchema = {
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "WebPage",
			"@id": `${canonical_url}/#webpage`,
			url: canonical_url,
			name: title,
			description: description,
			isPartOf: {
				"@id": `https://www.mawhois.com/#website`,
				},
		},
		{
			"@type": "BreadcrumbList",
			"@id": `${canonical_url}/#breadcrumb`,
			itemListElement: [
				{
					"@type": "ListItem",
					position: 1,
					item: {
						"@id": canonical_url,
						name: "Accueil",
					},
				},
				{
				    "@type": "ListItem",
					position: 2,
					item: {
						"@id": canonical_url,
						name: "Ã€ propos",
					},
				},
			],
		},

		{
			"@type": "AboutPage",
			name: title,
			description: description,
		},
	],
};
---

<Layout 
	title={title}
	description={description}
	lang={"en"}
	canonical_url={canonical_url}
	imageUrl={imageUrl}
	ogAlt={ogAlt}
	articleSchema={articleSchema}
>
	
	<Hero title={enConditionsGenerales.Hero.title} />
	<TermsSection
		mainTitle={enConditionsGenerales.Terms.mainTitle}
		mainParagraph={enConditionsGenerales.Terms.mainParagraph}
		paragraphsAndSubtitles={enConditionsGenerales.Terms.paragraphsAndSubtitles}
	/>
	
</Layout>

