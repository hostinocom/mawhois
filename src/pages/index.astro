---
export const prerender = true;
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/landing-page/Hero.astro';
import Description from '../components/sections/landing-page/Description.astro';
import ServiceInfo from '../components/sections/landing-page/ServiceInfo.astro';
import UseCases from '../components/sections/landing-page/UseCases.astro';
import PublicData from '../components/sections/landing-page/PublicData.astro';
import Privacy from '../components/sections/landing-page/Privacy.astro';
import Reliability from '../components/sections/landing-page/Reliability.astro';
import FAQ from '../components/ui/FAQ.astro';
import { enMetaTags } from '../config/metaTags';
import { enHomePage } from '../config/i18n/en';
import { enRegistries } from '../config/registries';

const { title, description, canonical_url, ogAlt, imageUrl } = enMetaTags.homePage;

const articleSchema = {
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "WebPage",
			"@id": `${canonical_url}/#webpage`,
			url: canonical_url,
			name: title,
			description: description,
			isPartOf: {
				"@id": `https://www.mawhois.com/#website`,
				},
		},
	],
};

---
	
<Layout 
	title={title} 
	description={description} 
	lang="en"
	canonical_url={canonical_url} 
	imageUrl={imageUrl} 
	ogAlt={ogAlt}
	articleSchema={articleSchema}
>

	<Hero title={enHomePage.home.title} registries={enRegistries} baseRoute="/domain" searchButtonText={"Search"} />
	<Description title={enHomePage.Description.title} />
	<ServiceInfo title={enHomePage.ServiceInfo.title} paragraphs={enHomePage.ServiceInfo.paragraphs} image={enHomePage.ServiceInfo.image} />
	<UseCases title={enHomePage.UseCases.title} paragraphTitle={enHomePage.UseCases.paragraphTitle} />
	<PublicData title={enHomePage.PublicData.title} paragraphs={enHomePage.PublicData.paragraphs} image={enHomePage.PublicData.image} />
	<Privacy title={enHomePage.Privacy.title} paragraphs={enHomePage.Privacy.paragraphs} image={enHomePage.Privacy.image} />
	<Reliability title={enHomePage.Reliability.title} paragraphs={enHomePage.Reliability.paragraphs} />
	<FAQ faqs={enHomePage.FAQ.faqs} title={enHomePage.FAQ.title} />
	
</Layout>

