---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/conditions-generales/Hero.astro';
import Terms from '../components/sections/conditions-generales/Terms.astro';
import { metaTags } from '../config/metaTags';

const { title, description, canonical_url, ogAlt, imageUrl, articleSchema } = metaTags.conditionsGenerales;
---

<Layout 
	title={title}
	description={description}
	lang="fr"
	canonical_url={canonical_url}
	imageUrl={imageUrl}
	ogAlt={ogAlt}
	articleSchema={articleSchema}
>
	
	<Hero />
	<Terms />
	
</Layout>

