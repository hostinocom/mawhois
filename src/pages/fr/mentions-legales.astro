---
import Layout from '../../layouts/Layout.astro';
import { frMetaTags } from '../../config/metaTags';
import InformationSection from '../../components/sections/legal-notice/information.astro';
import { frMentionsLegales } from '../../config/i18n/fr';

const { title, description, canonical_url, ogAlt, imageUrl } = frMetaTags.mentionslegales;

const articleSchema = {
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "WebPage",
			"@id": `${canonical_url}/#webpage`,
			url: canonical_url,
			name: title,
			description: description,
			isPartOf: {
				"@id": `https://www.mawhois.com/#website`,
				},
		},
		{
			"@type": "BreadcrumbList",
			"@id": `${canonical_url}/#breadcrumb`,
			itemListElement: [
				{
					"@type": "ListItem",
					position: 1,
					item: {
						"@id": canonical_url,
						name: "Accueil",
					},
				},
				{
				    "@type": "ListItem",
					position: 2,
					item: {
						"@id": canonical_url,
						name: "Ã€ propos",
					},
				},
			],
		},

		{
			"@type": "AboutPage",
			name: title,
			description: description,
		},
	],
};

---

<Layout 
	title={title}
	description={description}
	lang="fr"
	canonical_url={canonical_url}
	imageUrl={imageUrl}
	ogAlt={ogAlt}
	articleSchema={articleSchema}
>
	
	<InformationSection 
		title={frMentionsLegales.information.title}
		paragraphs={frMentionsLegales.information.paragraphs}
		companyInfo={frMentionsLegales.information.companyInfo}
		legalInfo={frMentionsLegales.information.legalInfo}
		accreditation={frMentionsLegales.information.accreditation}
		legalNotice={frMentionsLegales.information.legalNotice}
		contact={frMentionsLegales.information.contact}
	/>
	
</Layout>

