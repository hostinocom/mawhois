---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/sections/domaineMaroc/Hero.astro';
import DomainInfo from '../../components/sections/domaineMaroc/DomainInfo.astro';
import WhyRegister from '../../components/sections/domaineMaroc/WhyRegister.astro';
import WhatIsDomain from '../../components/sections/domaineMaroc/WhatIsDomain.astro';
import Pricing from '../../components/sections/domaineMaroc/Pricing.astro';
import FAQ from '../../components/ui/FAQ.astro';
import { frMetaTags } from '../../config/metaTags';
import { frNomDeDomaineMaroc } from '../../config/i18n/fr';
import { frRegistries } from '../../config/registries';

const { title, description, canonical_url, ogAlt, imageUrl } = frMetaTags.nomDeDomaineMaroc;

const articleSchema = {
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "WebPage",
			"@id": `${canonical_url}/#webpage`,
			url: canonical_url,
			name: title,
			description: description,
			isPartOf: {
				"@id": `https://www.mawhois.com/#website`,
				},
		},
		{
			"@type": "BreadcrumbList",
			"@id": `${canonical_url}/#breadcrumb`,
			itemListElement: [
				{
					"@type": "ListItem",
					position: 1,
					item: {
                    "@id": "https://www.mawhois.com/fr/",
						name: "Whois Maroc",
					},
				},
				{
				    "@type": "ListItem",
					position: 2,
					item: {
						"@id": canonical_url,
						name: "Nom de domaine Maroc",
					},
				},
			],
		},

{
      "@type": "Product",
      name: title,
      url: canonical_url,
      description: description,
      brand: { "@type": "Brand", name: "Whois MA" },
      offers: {
        "@type": "AggregateOffer",
        url: canonical_url,
        lowPrice: "118",
        priceCurrency: "MAD",
        availability: "InStock",
      },
      aggregateRating: {
        "@type": "AggregateRating",
        ratingValue: "5",
        reviewCount: "1434",
      },
    },
	],
};

---

<Layout 
	title={title}
	description={description}
	lang="fr"
	canonical_url={canonical_url}
	imageUrl={imageUrl}
	ogAlt={ogAlt}
	articleSchema={articleSchema}
>
	
	<Hero 
		subtitle={frNomDeDomaineMaroc.Hero.subtitle}
		title={frNomDeDomaineMaroc.Hero.title}
		price={frNomDeDomaineMaroc.Hero.price}
		registries={frRegistries}	
		baseRoute="/fr/domaine"
		searchButtonText={"Rechercher"}
	/>
	<DomainInfo 
		title={frNomDeDomaineMaroc.DomainInfo.title}
		paragraphs={frNomDeDomaineMaroc.DomainInfo.paragraphs}
		image={frNomDeDomaineMaroc.DomainInfo.image}
	/>
	<WhyRegister 
		title={frNomDeDomaineMaroc.WhyRegister.title}
		columns={frNomDeDomaineMaroc.WhyRegister.columns}
	/>
	<WhatIsDomain 
		title={frNomDeDomaineMaroc.WhatIsDomain.title}
		paragraphs={frNomDeDomaineMaroc.WhatIsDomain.paragraphs}
		image={frNomDeDomaineMaroc.WhatIsDomain.image}
	/>
	<Pricing 
		title={frNomDeDomaineMaroc.Pricing.title}
		intro={frNomDeDomaineMaroc.Pricing.intro}
		features={frNomDeDomaineMaroc.Pricing.features}
		pricing={frNomDeDomaineMaroc.Pricing.pricing}
		details={frNomDeDomaineMaroc.Pricing.details}
	/>
	<FAQ faqs={frNomDeDomaineMaroc.FAQ.faqs} title={frNomDeDomaineMaroc.FAQ.title} />
	
</Layout>

