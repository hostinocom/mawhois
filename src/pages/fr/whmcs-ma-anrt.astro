---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/sections/WHMCS/Hero.astro';
import WhmcsInfo from '../../components/sections/WHMCS/WhmcsInfo.astro';
import WhmcsInfoMa from '../../components/sections/WHMCS/WhmcsInfo.ma.astro';
import ContactSection from '../../components/shared/ContactSection.astro';
import { frMetaTags } from '../../config/metaTags';
import { frWHMCS } from '../../config/i18n/fr';
import FAQ from '../../components/ui/FAQ.astro';

const { title, description, canonical_url, ogAlt, imageUrl } = frMetaTags.whmcs;

const articleSchema = {
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "WebPage",
			"@id": `${canonical_url}/#webpage`,
			url: canonical_url,
			name: title,
			description: description,
			isPartOf: {
				"@id": `https://www.mawhois.com/#website`,
				},
		},
		{
			"@type": "BreadcrumbList",
			"@id": `${canonical_url}/#breadcrumb`,
			itemListElement: [
				{
					"@type": "ListItem",
					position: 1,
					item: {
						"@id": canonical_url,
						name: "Accueil",
					},
				},
				{
				    "@type": "ListItem",
					position: 2,
					item: {
						"@id": canonical_url,
						name: "Ã€ propos",
					},
				},
			],
		},

		{
			"@type": "AboutPage",
			name: title,
			description: description,
		},
	],
};

---

<Layout 
	title={title} 
	description={description} 
	lang="fr"
	canonical_url={canonical_url} 
	imageUrl={imageUrl} 
	ogAlt={ogAlt}
	articleSchema={articleSchema}
>
	<Hero title={frWHMCS.Hero.title} />
	<WhmcsInfo 
		title={frWHMCS.WhmcsInfo.title}
		paragraphs={frWHMCS.WhmcsInfo.paragraphs}
		button={frWHMCS.WhmcsInfo.button}
		image={frWHMCS.WhmcsInfo.image}
	/>
	<WhmcsInfoMa 
		title={frWHMCS.WhmcsInfoMa.title}
		paragraphs={frWHMCS.WhmcsInfoMa.paragraphs}
	/>
	<ContactSection 
		title={frWHMCS.ContactSection.title}
		description={frWHMCS.ContactSection.description}
		phone={frWHMCS.ContactSection.phone}
		whatsapp={frWHMCS.ContactSection.whatsapp}
		email={frWHMCS.ContactSection.email}
		privacyPolicyUrl={frWHMCS.ContactSection.privacyPolicyUrl}
		formFields={frWHMCS.ContactSection.formFields}
	/>
	<FAQ faqs={frWHMCS.FAQ.faqs} title={frWHMCS.FAQ.title} />
</Layout>

