---
import Layout from '../../layouts/Layout.astro';
import ContactSection from '../../components/shared/ContactSection.astro';
import { frMetaTags } from '../../config/metaTags';
import { frContact } from '../../config/i18n/fr';

const { title, description, canonical_url, ogAlt, imageUrl } = frMetaTags.contact;

const articleSchema = {
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "WebPage",
			"@id": `${canonical_url}/#webpage`,
			url: canonical_url,
			name: title,
			description: description,
			isPartOf: {
				"@id": `https://www.mawhois.com/#website`,
				},
		},
		{
			"@type": "BreadcrumbList",
			"@id": `${canonical_url}/#breadcrumb`,
			itemListElement: [
				{
					"@type": "ListItem",
					position: 1,
					item: {
						"@id": canonical_url,
						name: "Accueil",
					},
				},
				{
				    "@type": "ListItem",
					position: 2,
					item: {
						"@id": canonical_url,
						name: "Ã€ propos",
					},
				},
			],
		},

		{
			"@type": "AboutPage",
			name: title,
			description: description,
		},
	],
};

---

<Layout 
	title={title} 
	description={description} 
	lang="fr"
	canonical_url={canonical_url} 
	imageUrl={imageUrl} 
	ogAlt={ogAlt}
	articleSchema={articleSchema}
>	
    <ContactSection 
		title={frContact.title}
		description={frContact.description}
		phone={frContact.phone}
		whatsapp={frContact.whatsapp}
		email={frContact.email}
		privacyPolicyUrl={frContact.privacyPolicyUrl}
		formFields={frContact.formFields}
	/>
</Layout>

