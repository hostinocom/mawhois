---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/sections/landing-page/Hero.astro';
import Description from '../../components/sections/landing-page/Description.astro';
import ServiceInfo from '../../components/sections/landing-page/ServiceInfo.astro';
import UseCases from '../../components/sections/landing-page/UseCases.astro';
import PublicData from '../../components/sections/landing-page/PublicData.astro';
import Privacy from '../../components/sections/landing-page/Privacy.astro';
import Reliability from '../../components/sections/landing-page/Reliability.astro';
import FAQ from '../../components/ui/FAQ.astro';
import { frMetaTags } from '../../config/metaTags';
import { frHomePage } from '../../config/i18n/fr';
import { frRegistries } from '../../config/registries';

const { title, description, canonical_url, ogAlt, imageUrl } = frMetaTags.homePage;

const articleSchema = {
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "WebPage",
			"@id": `${canonical_url}/fr/#webpage`,
			url: canonical_url,
			name: title,
			description: description,
			isPartOf: {
				"@id": `https://www.mawhois.com/fr/#website`,
				},
		},
		{
			"@type": "BreadcrumbList",
			"@id": `${canonical_url}/fr/#breadcrumb`,
			itemListElement: [
				{
					"@type": "ListItem",
					position: 1,
					item: {
            "@id": "https://www.mawhois.com/fr/",
						name: "Whois Ma",
					},
				},
				{
				    "@type": "ListItem",
					position: 2,
					item: {
						"@id": canonical_url,
						name: "Whois Ma",
					},
				},
			],
		},

{
      "@type": "Product",
      name: title,
      url: canonical_url,
      description: description,
      brand: { "@type": "Brand", name: "Whois MA" },
      offers: {
        "@type": "AggregateOffer",
        url: canonical_url,
        lowPrice: "118",
        priceCurrency: "MAD",
        availability: "InStock",
      },
      aggregateRating: {
        "@type": "AggregateRating",
        ratingValue: "5",
        reviewCount: "1729",
      },
    },
	],
};

---
	
<Layout 
	title={title} 
	description={description} 
	lang="fr"
	canonical_url={canonical_url} 
	imageUrl={imageUrl} 
	ogAlt={ogAlt}
	articleSchema={articleSchema}
>

	<Hero title={frHomePage.home.title} registries={frRegistries} baseRoute="/fr/domaine" searchButtonText={"Rechercher"} />
	<Description title={frHomePage.Description.title} />
	<ServiceInfo title={frHomePage.ServiceInfo.title} paragraphs={frHomePage.ServiceInfo.paragraphs} image={frHomePage.ServiceInfo.image} />
	<UseCases title={frHomePage.UseCases.title} paragraphTitle={frHomePage.UseCases.paragraphTitle} />
	<PublicData title={frHomePage.PublicData.title} paragraphs={frHomePage.PublicData.paragraphs} image={frHomePage.PublicData.image} />
	<Privacy title={frHomePage.Privacy.title} paragraphs={frHomePage.Privacy.paragraphs} image={frHomePage.Privacy.image} />
	<Reliability title={frHomePage.Reliability.title} paragraphs={frHomePage.Reliability.paragraphs} />
	<FAQ faqs={frHomePage.FAQ.faqs} title={frHomePage.FAQ.title} />
	
</Layout>

