---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/sections/propos/Hero.astro';
import AboutSection from '../../components/sections/propos/AboutSection.astro';
import { frMetaTags } from '../../config/metaTags';
import { frAPropos } from '../../config/i18n/fr';

const { title, description, canonical_url, ogAlt, imageUrl } = frMetaTags.aPropos;

const articleSchema = {
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "WebPage",
			"@id": `${canonical_url}/#webpage`,
			url: canonical_url,
			name: title,
			description: description,
			isPartOf: {
				"@id": `https://www.mawhois.com/#website`,
				},
		},
		{
			"@type": "BreadcrumbList",
			"@id": `${canonical_url}/#breadcrumb`,
			itemListElement: [
				{
					"@type": "ListItem",
					position: 1,
					item: {
						"@id": canonical_url,
						name: "Accueil",
					},
				},
				{
				    "@type": "ListItem",
					position: 2,
					item: {
						"@id": canonical_url,
						name: "Ã€ propos",
					},
				},
			],
		},

		{
			"@type": "AboutPage",
			name: title,
			description: description,
		},
	],
};

---

<Layout 
	title={title}
	description={description}
	lang="fr"
	canonical_url={canonical_url}
	imageUrl={imageUrl}
	ogAlt={ogAlt}
	articleSchema={articleSchema}
>
	
	<Hero title={frAPropos.Hero.title} />
	<AboutSection 
		title={frAPropos.About.title}
		image={frAPropos.About.image}
		paragraphs={frAPropos.About.paragraphs}
		companyInfo={frAPropos.About.companyInfo}
		legalInfo={frAPropos.About.legalInfo}
		accreditation={frAPropos.About.accreditation}
		legalNotice={frAPropos.About.legalNotice}
		contact={frAPropos.About.contact}
	/>
	
</Layout>

