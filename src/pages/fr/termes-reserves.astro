---
export const prerender = true;
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/sections/termes-reserves/Hero.astro';
import ReservedTermsInfo from '../../components/sections/termes-reserves/ReservedTermsInfo.astro';
import ReservedTermsSection from '../../components/sections/termes-reserves/ReservedTermsSection.astro';
import { frMetaTags } from '../../config/metaTags';
import { frTermesReserves } from '../../config/i18n/fr';
import { frReservedTerms } from '../../config/reservedTerms';

const locale = 'fr';
const { title, description, canonical_url, ogAlt, imageUrl } = frMetaTags.termesReserves;

const articleSchema = {
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "WebPage",
			"@id": `${canonical_url}/#webpage`,
			url: canonical_url,
			name: title,
			description: description,
			isPartOf: {
				"@id": `https://www.mawhois.com/#website`,
				},
		},
		{
			"@type": "BreadcrumbList",
			"@id": `${canonical_url}/#breadcrumb`,
			itemListElement: [
				{
					"@type": "ListItem",
					position: 1,
					item: {
						"@id": canonical_url,
						name: "Accueil",
					},
				},
				{
				    "@type": "ListItem",
					position: 2,
					item: {
						"@id": canonical_url,
						name: "À propos",
					},
				},
			],
		},

		{
			"@type": "AboutPage",
			name: title,
			description: description,
		},
	],
};

---

<Layout 
	title={title}
	description={description}
	lang={locale}
	canonical_url={canonical_url}
	imageUrl={imageUrl}
	ogAlt={ogAlt}
	articleSchema={articleSchema}
>
	
	<Hero title={frTermesReserves.Hero.title} />
	<ReservedTermsInfo 
		title={frTermesReserves.ReservedTermsInfo.title}
		paragraphs={frTermesReserves.ReservedTermsInfo.paragraphs}
	/>
	<ReservedTermsSection title="Liste des termes réservés" reservedTerms={frReservedTerms} source="Liste officielle des termes réservés (PDF)" />
	
</Layout>

