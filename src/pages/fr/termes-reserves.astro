---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/sections/termes-reserves/Hero.astro';
import ReservedTermsInfo from '../../components/sections/termes-reserves/ReservedTermsInfo.astro';
import ReservedTerms from '../../components/sections/termes-reserves/ReservedTerms.astro';
import { metaTags } from '../../config/metaTags';
import { frTermesReserves } from '../../config/i18n/fr';
import { frReservedTerms } from '../../config/reservedTerms';

const locale = 'fr';
const { title, description, canonical_url, ogAlt, imageUrl, articleSchema } = metaTags.termesReserves;
---

<Layout 
	title={title}
	description={description}
	lang={locale}
	canonical_url={canonical_url}
	imageUrl={imageUrl}
	ogAlt={ogAlt}
	articleSchema={articleSchema}
>
	
	<Hero title={frTermesReserves.Hero.title} />
	<ReservedTermsInfo 
		title={frTermesReserves.ReservedTermsInfo.title}
		paragraphs={frTermesReserves.ReservedTermsInfo.paragraphs}
	/>
	<ReservedTerms title="Liste des termes réservés" reservedTerms={frReservedTerms} source="Liste officielle des termes réservés (PDF)" />
	
</Layout>

