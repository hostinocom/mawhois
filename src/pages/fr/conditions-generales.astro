---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/sections/conditions-generales/Hero.astro';
import TermsSection from '../../components/sections/conditions-generales/TermsSection.astro';
import { frMetaTags } from '../../config/metaTags';
import { frConditionsGenerales } from '../../config/i18n/fr';

const { title, description, canonical_url, ogAlt, imageUrl } = frMetaTags.conditionsGenerales;

const articleSchema = {
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "WebPage",
			"@id": `${canonical_url}/#webpage`,
			url: canonical_url,
			name: title,
			description: description,
			isPartOf: {
				"@id": `https://www.mawhois.com/#website`,
				},
		},
		{
			"@type": "BreadcrumbList",
			"@id": `${canonical_url}/#breadcrumb`,
			itemListElement: [
				{
					"@type": "ListItem",
					position: 1,
					item: {
						"@id": canonical_url,
						name: "Accueil",
					},
				},
				{
				    "@type": "ListItem",
					position: 2,
					item: {
						"@id": canonical_url,
						name: "Ã€ propos",
					},
				},
			],
		},

		{
			"@type": "AboutPage",
			name: title,
			description: description,
		},
	],
};

---

<Layout 
	title={title}
	description={description}
	lang={"fr"}
	canonical_url={canonical_url}
	imageUrl={imageUrl}
	ogAlt={ogAlt}
	articleSchema={articleSchema}
>
	
	<Hero title={frConditionsGenerales.Hero.title} />
	<TermsSection 
		mainTitle={frConditionsGenerales.Terms.mainTitle}
		mainParagraph={frConditionsGenerales.Terms.mainParagraph}
		paragraphsAndSubtitles={frConditionsGenerales.Terms.paragraphsAndSubtitles}
	/>
	
</Layout>

