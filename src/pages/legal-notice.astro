---
import Layout from '../layouts/Layout.astro';
import InformationSection from '../components/sections/legal-notice/information.astro';
import { enMetaTags } from '../config/metaTags';
import { enMentionsLegales } from '../config/i18n/en';

const { title, description, canonical_url, ogAlt, imageUrl } = enMetaTags.mentionslegales;

const articleSchema = {
	"@context": "https://schema.org",
	"@graph": [
		{
			"@type": "WebPage",
			"@id": `${canonical_url}/#webpage`,
			url: canonical_url,
			name: title,
			description: description,
			isPartOf: {
				"@id": `https://www.mawhois.com/#website`,
				},
		},
		{
			"@type": "BreadcrumbList",
			"@id": `${canonical_url}/#breadcrumb`,
			itemListElement: [
				{
					"@type": "ListItem",
					position: 1,
					item: {
						"@id": canonical_url,
						name: "Accueil",
					},
				},
				{
				    "@type": "ListItem",
					position: 2,
					item: {
						"@id": canonical_url,
						name: "Ã€ propos",
					},
				},
			],
		},

		{
			"@type": "AboutPage",
			name: title,
			description: description,
		},
	],
};	
---

<Layout 
	title={title}
	description={description}
	lang="en"
	canonical_url={canonical_url}
	imageUrl={imageUrl}
	ogAlt={ogAlt}
	articleSchema={articleSchema}
>
	
	<InformationSection 
		title={enMentionsLegales.information.title}
		paragraphs={enMentionsLegales.information.paragraphs}
		image={enMentionsLegales.information.image}
		companyInfo={enMentionsLegales.information.companyInfo}
		legalInfo={enMentionsLegales.information.legalInfo}
		accreditation={enMentionsLegales.information.accreditation}
		legalNotice={enMentionsLegales.information.legalNotice}
		contact={enMentionsLegales.information.contact}
	/>
	
</Layout>

