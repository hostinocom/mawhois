---
import CookieConsent from '../components/cookie/CookieConsent.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';

interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "WHOIS Maroc - Recherche de domaine .MA", 
	description = "Service de répertoire en ligne basé sur la base de données du registre .ma qui permet de rechercher des renseignements sur les noms de domaine."
} = Astro.props;
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<br />
		<CookieConsent />
		<Footer />
	</body>
</html>

<style is:global>
	@import "../styles/global.css";
</style>
